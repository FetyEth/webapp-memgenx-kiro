{
  "name": "ESLint Check on Save",
  "description": "Run ESLint to check code quality when saving files",
  "trigger": {
    "type": "onFileSave",
    "filePattern": "**/*.{ts,tsx,js,jsx}"
  },
  "actions": [
    {
      "type": "runCommand",
      "command": "npx eslint ${filePath} --fix",
      "showOutput": false
    }
  ],
  "enabled": true,
  "createdAt": "2025-10-15T10:35:00Z",
  "updatedAt": "2025-10-15T10:35:00Z"
}
